<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="All login tests.">

    <test name="positive">
        <classes>
            <class name="LoginTest">
                <methods>
                    <include name="successfulLoginTest" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="negative">
        <classes>
            <class name="LoginTest">
                <methods>
                    <include name="validationMessagesOnInvalidEmailPasswordTest" />
                    <include name="negativeLoginWithEmptyPasswordTest" />
                </methods>
            </class>
        </classes>
    </test>

</suite>